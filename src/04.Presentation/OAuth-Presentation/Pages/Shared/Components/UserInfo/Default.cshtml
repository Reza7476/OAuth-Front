@model UserInfoModel

@if (!string.IsNullOrWhiteSpace(Model.FullName))
{
    <div class="dropdown d-inline-block">
        <button type="button" class="btn header-item bg-soft-light border-start border-end"
                id="page-header-user-dropdown"
                data-bs-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false">
            <span class="d-none d-xl-inline-block ms-1 fw-medium">@Model.FullName</span>
            <i class="mdi mdi-chevron-down d-none d-xl-inline-block"></i>
        </button>
        <div class="dropdown-menu dropdown-menu-end">
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/SignIn/LogOut"><i class="mdi mdi-logout font-size-16 align-middle me-1"></i>خروج</a>
        </div>
    </div>
}
else
{
    <div class="dropdown d-inline-block">
        <button type="button"
                class="btn header-item bg-soft-light border-start border-end"
                id="page-header-user-dropdown"
                data-bs-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false">
            <span class="d-none d-xl-inline-block ms-1 fw-medium">ورود</span>
        </button>
        <div class="dropdown-menu dropdown-menu-end">
            <a class="dropdown-item" href="/SignIn/LogIn"><i class="mdi mdi-logout font-size-16 align-middle me-1"></i>ورود</a>
        </div>
    </div>
}
